import java.util.Scanner;

public class AlanCevreHesaplama {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int r, a;
        double alan, cevre, pi = 3.14, dilimAlani;
        System.out.print("Yarıçapı giriniz: ");
        r = input.nextInt();
        System.out.print("Merkez açi ölçüsünü giriniz: ");
        a = input.nextInt();

        alan = pi * r * r;
        cevre = 2 * pi * r;
        dilimAlani = (pi * (Math.pow(r, 2)) * a) / 360;

        System.out.print("Dairenin Alanı= " + alan + "\nDairenin Çevresi= " + cevre + "\nDairenin Dilim Alanı= " + dilimAlani);

    }
}
